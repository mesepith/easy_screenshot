{
  "manifest_version": 3,
  "name": "Easy Screenshot",
  "version": "1.0",
  "description": "Take screenshots of your browser tab",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}